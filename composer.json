{
    "name": "netgen/open-weather-map-bundle",
    "description": "eZ Publish/Platform Bundle for OpenWeatherMap",
    "type": "ezplatform-bundle",
    "keywords": [
        "ezpublish",
        "ezplatform",
        "netgen",
        "openweathermap",
        "api",
        "weather"
    ],
    "homepage": "https://github.com/netgen/NetgenOpenWeatherMapBundle",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "http://www.netgenlabs.com"
        }
    ],
    "require": {
        "ezsystems/ezpublish-kernel": "~6.0",
        "tedivm/stash-bundle": "~0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.3",
        "matthiasnoback/symfony-config-test": "~2.0",
        "matthiasnoback/symfony-dependency-injection-test": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Netgen\\Bundle\\OpenWeatherMapBundle\\": "bundle"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\Bundle\\OpenWeatherMapBundle\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --color=always",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 bundle tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 bundle tests"
    },
    "config": {
        "sort-packages": true
    }
}
