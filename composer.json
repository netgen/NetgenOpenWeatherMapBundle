{
    "name": "netgen/open-weather-map-bundle",
    "description": "eZ Platform Bundle for OpenWeatherMap",
    "type": "ezplatform-bundle",
    "keywords": [
        "ezplatform",
        "netgen",
        "openweathermap",
        "api",
        "weather"
    ],
    "homepage": "https://github.com/netgen/NetgenOpenWeatherMapBundle",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "http://www.netgenlabs.com"
        }
    ],
    "require": {
        "php": "~5.6|~7.0|~7.1",
        "ezsystems/ezpublish-kernel": "~6.0",
        "tedivm/stash-bundle": "~0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "friendsofphp/php-cs-fixer": "~2.0",
        "matthiasnoback/symfony-config-test": "~2.0",
        "matthiasnoback/symfony-dependency-injection-test": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Netgen\\Bundle\\OpenWeatherMapBundle\\": "bundle"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\Bundle\\OpenWeatherMapBundle\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --color=always",
        "fix": "@php vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
